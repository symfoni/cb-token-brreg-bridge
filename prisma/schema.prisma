generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  DEPOSIT_RECEIVED
  DEPOSIT_INITIATED
  DEPOSIT_SUCCESS
  ERROR
  WITHDRAWEL_RECEIEVED
  BURN_INTIATED
  BURN_SUCCESS
  WITHDRAWEL_INITIATED
  WITHDRAWEL_SUCCESS
  SYNC_RECEIVED
  SYNC_INITIATED
  SYNC_SUCCESS
}

model Job {
  id                Int      @id @default(autoincrement())
  name              String
  latestBlockNumber Int      @default(0)
  running           Boolean  @default(false)
  lastRunAt         DateTime @default(now())
  createdAt         DateTime @default(now())
  sourceChain       Int
  destinationChain  Int
  updatedAt         DateTime @updatedAt

  @@unique([name, sourceChain, destinationChain], name: "chainBridgeJob")
}

model Transaction {
  id               Int      @id @default(autoincrement())
  txHashDeposit    String?  @unique
  txHashMint       String?  @unique
  txHashBurn       String?  @unique
  txHashWithdrawel String?  @unique
  blockNumber      Int
  sourceChain      Int
  destinationChain Int
  amount           BigInt
  address          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  status           Status
}
